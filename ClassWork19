import pickle


class Product:
    def __init__(self):
        self.pid = ""
        self.pname = ""
        self.price = 0.0
        self.description = ""

    def create_product(self):
        self.pid = input("Enter the Product ID: ")
        self.pname = input("Enter the Product Name: ")
        self.price = float(input("Enter the Product Price: "))
        self.description = input("Enter the Product Description: ")

    def display_product_info(self):
        print("Product ID:", self.pid)
        print("Product Name:", self.pname)
        print("Price:", self.price)
        print("Description:", self.description)


# main code

while True:
    print("1. Create a Product Object")
    print("2. Get info for the product")
    print("3. Display the Product")
    print("4. Write the Product Into a File")
    print("5. Read from the file and display the product info")
    print("6. Exit")

    option = input("Enter your choice: ")

    if option == "1":
        product_object = Product()

    elif option == "2":
        product_object.create_product()

    elif option == "3":
        product_object.display_product_info()

    elif option == "4":
        f1 = open("product_inventory.dat", "ab")
        pickle.dump(product_object, f1)

        f1.close()

    elif option == "5":
        f2 = open("product_inventory.dat", "rb")
        while 1:
            try:
                received_product = pickle.load(f2)
                received_product.display_product_info()

            except EOFError:
                break

    elif option == "6":
        break
