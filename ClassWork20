class Customer:
    def __init__(self):
        self.cid = ""
        self.cname = ""
        self.acc_no = ""
        self.phone = ""
        self.emailID = ""
        self.balance = 0.0

    def add_values_to_Customer(self):
        self.cid = input("Enter Customer ID: ")
        self.cname = input("Enter Customer Name: ")
        self.acc_no = input("Enter Account Number: ")
        self.phone = input("Enter Phone Number: ")
        self.emailID = input("Enter Email: ")
        self.balance = float(input("Enter Account Balance: "))

    def debit_from(self, amt):
        self.balance = self.balance - amt

    def credit_to(self, amt):
        self.balance = self.balance + amt

    def display_Cust_info(self):
        print("Customer ID:", self.cid)
        print("Customer Name:", self.cname)
        print("Account Number:", self.acc_no)
        print("Phone Number:", self.phone)
        print("Email:", self.emailID)
        print("Account Balance:", self.balance)


# main code

while True:
    print("1. Add Customer")
    print("2. Transfer Funds")
    print("3. View Accounts")

    option = input("Enter your choice: ")

    if option == "1":
        print("Customer 1")
        print("Customer 2")

        customer = input("Enter Customer to Add: ")
        if customer == "1":
            c1 = Customer()
            c1.add_values_to_Customer()

        elif customer == "2":
            c2 = Customer()
            c2.add_values_to_Customer()

